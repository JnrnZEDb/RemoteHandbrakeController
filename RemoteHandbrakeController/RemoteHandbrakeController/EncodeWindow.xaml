<Window x:Class="RemoteHandbrakeController.EncodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHandbrakeController"
        mc:Ignorable="d"
        Title="EncodeWindow" Height="500" Width="500">
    <Grid Background="DodgerBlue">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="30"/>
			</Grid.RowDefinitions>
			<ListBox Name="lstBoxFiles" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
			<Button Name="btnStartEncode" Grid.Row="1" Content="START" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="BtnStartEncode_Click"/>
		</Grid>

		<TextBlock Name="txtOutput" Grid.Column="1" Background="Black" Foreground="White" FontFamily="Console" />


	</Grid>
</Window>
